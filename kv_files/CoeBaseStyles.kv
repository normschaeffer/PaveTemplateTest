<MainGrid@GridLayout>:
    size: root.width, root.height
    cols: 1
    rows: 3
    # padding: 10
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        # use rectangle and source to add image to background
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/CoEBackground-1800x1200.png"

